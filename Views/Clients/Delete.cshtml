@model Tuple<ServiceStation.Models.Client, bool>

@{
    ViewBag.Title = "Delete";
    bool canDelete = Model.Item2;
}

<h2>Delete</h2>

@if (canDelete)
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3>You can't delete the client because there are a few cars</h3>
}

<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Item1.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.DateOfBirth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.DateOfBirth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Phone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Email)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (canDelete)
            {
                <input type="submit" value="Delete" class="btn btn-default" />
            }
            else
            {
                <input type="submit" value="Delete" class="btn btn-default disabled" />
            }
            |@Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
