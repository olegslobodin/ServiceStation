@model Tuple<ServiceStation.Models.Car, bool>

@{
    ViewBag.Title = "Delete";
    bool canDelete = Model.Item2;
}

<h2>Delete</h2>

@if (canDelete)
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3>You can't delete the car because there are a few orders</h3>
}

<div>
    <h4>Car</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Item1.Make)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Make)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Model)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Model)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Year)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.VIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.VIN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item1.Client.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item1.Client.FirstName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (canDelete)
            {
                <input type="submit" value="Delete" class="btn btn-default" />
            }
            else
            {
                <input type="submit" value="Delete" class="btn btn-default disabled" />
            }
            |@Html.ActionLink("Back to List", "Details", "Clients", new { id = Model.Item1.ClientId }, null)
        </div>
    }
</div>
